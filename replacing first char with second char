#include<stdio.h>
void strreplace(char[],char,char);
void main()
{
char s[100];
char ch1,ch2;
puts("string")
gets(s);
printf("enter first char");
ch1=getchar();
printf("second char");
ch2=getchar();
strreplace(s,ch1,ch2);
printf("after replacement");
printf(s);
}
void strreplace(char *ptr,char p1,char p2)
{
for(;*ptr;ptr++)
if(*ptr==p1)
*ptr=p2;
}
