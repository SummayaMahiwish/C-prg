#include <stdio.h>

int main(){
    //declaring & initializing an 1 byte number
    /*
        num (hex) = 0xAA
        its binary = 1010 1010
        its decimal value = 170
    */
    unsigned char num = 0xAA; 
    printf("num = %02X\n", num);
    
    //setting 2nd bit 
    num |= (1<<2);
    //now value will be: 1010 1110 = 0xAE (HEX) = 174 (DEC)
    printf("num = %02X\n", num);    
    return 0;    
}

